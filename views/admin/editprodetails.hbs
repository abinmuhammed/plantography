      <div class="container  mb-3 ">
  <div class="row col-lg-6 col-9 text-light">
    <h4 class="m-lg=4 mt-4 " style=" font-family: 'Arima Madurai', cursive; font-weight: 700;">EDIT PRODUCTS</h4>
    
  <form action="/admin/savechanges/{{product._id}}" method="post" enctype="multipart/form-data">
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="inputEmail4">Plant Name</label>
      <input type="text" required class="form-control" value="{{product.Name}}" name="Name" id="inputEmail4" placeholder="Plant Name">
    </div>
    <div class="form-group col-md-6">
      <label >Price</label>
      <input type="number" class="form-control" name="price" required id="price" value="{{product.price}}" placeholder="Price">
    </div>
  </div>
  <div class="form-group">
    <label for="inputAddress">Discription</label>
    <input type="texta" class="form-control" id="inputAddress" value="{{product.description}}" name="description" placeholder="Description about the product">
  </div>
    <div class="form-group  p-0 col-md-2">
      <label for="inputEmail4">Stock</label>
      <input type="number" required class="form-control" name="stock" value="{{product.stock}}"  placeholder="stock">
    </div>
 <div class="form-group p-0 col-md-3">
      <label for="inputEmail4">Offer price</label>
      <input type="number" required class="form-control" name="offerprice" id="offerprice"  onkeyup="checkprice()" value="{{product.offerprice}}"   placeholder="offerprice">
    </div>
    <h6 id="offeralert" class="text-danger font-weight-bold m-2" ></h6>

  <div class="form-row">

    <div class="form-group col-md-4">
      <label for="inputState">Catogory</label>
      <select id="inputState"  name="catogory" required class="form-control">
        <option selected>{{product.catogory}}</option>
        {{#each data}}
        <option >{{this.category}}</option>
        {{/each}}  
              
      </select>
    </div>
   
  </div>
<div class="row"><div class="col-md-5 col-12 mb-4">
                            <div class="form-group">
                                <label for="imgFile1">Image 1</label>
                                <img src="/product_images/{{product.image1}}" id="image-1" alt="" class="imggmi" style="height:100px">
                                <input type="file" class="form-control image" id="imgFile1" accept="image/*" name="image1"  >
                                <img src="" id="image-1" alt="" class="imggmi" style="height:100px">
                            </div>
                            <div style="display:flex">
                                <div id="screen1" class="imggmi image-container" style="height: 123px; width: 100%"></div> <br>
                            </div>
                                <button type="button" class="ms-auto me-auto btn bg-info " id="crop-1" style=" margin-top: 0px;  display: none;
                                    width:  50% ; margin: 3rem 0rem 0rem 0rem;">Crop</button> 
                        </div>
                        <div class="col-md-5 col-12 mb-4">
                            <div class="form-group">
                                <label for="imgFile2">Image 2:</label>
                                  <img src="/product_images/{{product.image2}}" id="image-2" alt="" class="imggmi" style="height:100px">
                                <input type="file" class="form-control image" id="imgFile2" accept="image/*" name="image2"  >
                                <img src="" id="image-2" alt="" class="imggmi" style="height:100px">
                            </div>
                            <div style="display:flex">
                                <div id="screen2" class="imggmi image-container" style="height: 123px; width: 100%"></div> <br>
                            </div>
                                <button type="button" class="ms-auto me-auto btn bg-info " id="crop-2" style=" margin-top: 0px;  display: none;
                                    width:  50% ; margin: 3rem 0rem 0rem 0rem;">Crop</button> 
                        </div></div>
                                     
 
  <button type="submit" class="btn btn-info mt-2 col-md-12 w-50 mb-4" id="addbtn">Add Product</button>
</form>

</div >

<script>
  
function checkprice(){
  let offerprice= parseInt(document.getElementById('offerprice').value) 
  let price =parseInt(document.getElementById('price').value)

  if(offerprice>=price){
document.getElementById("offeralert").innerHTML="Offer-price must be less than Price.....!"
    document.getElementById("addbutton").disabled=true

  }else{
    document.getElementById("offeralert").innerHTML=""
     document.getElementById("addbutton").disabled=false
  }
}

</script>