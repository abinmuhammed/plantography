<style>


  body{ background: linear-gradient(135deg, rgb(0, 0, 0) 0%, rgb(79, 71, 71)
  43%, rgb(170, 198, 178) 100%); background-attachment: fixed; font-family:
  'Arima Madurai', cursive; }


</style>

<section class="h-100 gradient-custom">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-10 col-xl-8">
        <div class="card" style="border-radius: 10px;">
          <div class="card-header px-4 py-5">
            <h5 class="text-muted mb-0"> Order From , <span class="text-capitalize" style="color: #100e10;">{{details.deliverydetails.firstname}}</span>!</h5>
          </div>
          <div class="card-body p-4">
            <div class="d-flex justify-content-between align-items-center mb-4">
              <p class="lead fw-normal mb-0" style="color: #000000;">Order Details</p>
             
            </div>
			{{#each products}}
            <div class="card shadow-0 border mb-4">
              <div class="card-body">
                <div class="row">
                  <div class="col-md-2">
                    <img src="/product_images/{{this.products.image1}}"
                      class="img-fluid" alt="Phone">
                  </div>
                  <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                    <p class="text-muted mb-0">{{this.products.Name}}</p>
                  </div>
                  <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                    <p class="text-muted mb-0 small">₹{{this.products.price}}</p>
                  </div>
                  <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                    <p class="text-muted mb-0 small">{{this.products.catogory}}</p>
                  </div>
                  <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                    <p class="text-muted mb-0 small">Qty: {{this.quantity}}</p>
                  </div>
                  <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                    <p class="text-muted mb-0 small">₹{{this.products.offerprice}}</p>
                  </div>
                </div>
                <hr class="mb-4" style="background-color: #e0e0e0; opacity: 1;">
				
              </div>
            </div>
            {{/each}}
			 {{#ifCond details.status "placed"}} 
                <div class="row d-flex align-items-center">
                  <div class="col-md-2">
                    <p class="text-muted mb-0 small">Track Order</p>
                  </div>
                  <div class="col-md-10">
                    <div class="progress" style="height: 6px; border-radius: 16px;">
                      <div class="progress-bar" role="progressbar"
                        style="width: 25%; border-radius: 16px; background-color: #a8729a;" aria-valuenow="65"
                        aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                    <div class="d-flex justify-content-around mb-1">
                     <p class="text-muted mt-1 mb-0 small ms-xl-5 font-weight-bold">Placed</p>
                      <p class="text-muted mt-1 mb-0 small ms-xl-5 font-weight-bold">Packed</p>
                      <p class="text-muted mt-1 mb-0 small ms-xl-5 font-weight-bold">Shipped</p>
                      <p class="text-muted mt-1 mb-0 small ms-xl-5 font-weight-bold">Delivered</p>
                    </div>
                  </div>
                </div>
				{{/ifCond}}
				 {{#ifCond details.status "Packed"}} 
                <div class="row d-flex align-items-center">
                  <div class="col-md-2">
                    <p class="text-muted mb-0 small">Track Order</p>
                  </div>
                  <div class="col-md-10">
                    <div class="progress" style="height: 6px; border-radius: 16px;">
                      <div class="progress-bar" role="progressbar"
                        style="width: 45%; border-radius: 16px; background-color: #a8729a;" aria-valuenow="65"
                        aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                    <div class="d-flex justify-content-around mb-1">
                     <p class="text-muted mt-1 mb-0 small ms-xl-5 font-weight-bold">Placed</p>
                      <p class="text-muted mt-1 mb-0 small ms-xl-5 font-weight-bold">Packed</p>
                      <p class="text-muted mt-1 mb-0 small ms-xl-5 font-weight-bold">Shipped</p>
                      <p class="text-muted mt-1 mb-0 small ms-xl-5 font-weight-bold">Delivered</p>
                    </div>
                  </div>
                </div>
				{{/ifCond}}
              {{#ifCond details.status "Deliverd"}} 
                <div class="row d-flex align-items-center">
                  <div class="col-md-2">
                    <p class="text-muted mb-0 small">Track Order</p>
                  </div>
                  <div class="col-md-10">
                    <div class="progress" style="height: 6px; border-radius: 16px;">
                      <div class="progress-bar" role="progressbar"
                        style="width: 100%; border-radius: 16px; background-color: #a8729a;" aria-valuenow="65"
                        aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                    <div class="d-flex justify-content-around mb-1">
						<p class="text-muted mt-1 mb-0 small ms-xl-5 font-weight-bold">Placed</p>
                      <p class="text-muted mt-1 mb-0 small ms-xl-5 font-weight-bold">Packed</p>
                      <p class="text-muted mt-1 mb-0 small ms-xl-5 font-weight-bold">Shipped</p>
                      <p class="text-muted mt-1 mb-0 small ms-xl-5 font-weight-bold">Delivered</p>
                    </div>
                  </div>
                </div>
				{{/ifCond}}
				 {{#ifCond details.status "Shipped"}} 
                <div class="row d-flex align-items-center">
                  <div class="col-md-2">
                    <p class="text-muted mb-0 small">Track Order</p>
                  </div>
                  <div class="col-md-10">
                    <div class="progress" style="height: 6px; border-radius: 16px;">
                      <div class="progress-bar" role="progressbar"
                        style="width: 75%; border-radius: 16px; background-color: #a8729a;" aria-valuenow="65"
                        aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                    <div class="d-flex justify-content-around mb-1">
                     <p class="text-muted mt-1 mb-0 small ms-xl-5 font-weight-bold">Placed</p>
                      <p class="text-muted mt-1 mb-0 small ms-xl-5 font-weight-bold">Packed</p>
                      <p class="text-muted mt-1 mb-0 small ms-xl-5 font-weight-bold">Shipped</p>
                      <p class="text-muted mt-1 mb-0 small ms-xl-5 font-weight-bold">Delivered</p>
                    </div>
                  </div>
                </div>
				{{/ifCond}}
				 {{#ifCond details.status "pending"}} 
                <div class="row d-flex align-items-center">
                  <div class="col-md-2">
                    <p class="text-muted mb-0 small">Track Order</p>
                  </div>
                  <div class="col-md-10">
                    <div class="progress" style="height: 6px; border-radius: 16px;">
                      <div class="progress-bar" role="progressbar"
                        style="width: 2%; border-radius: 16px; background-color: #a8729a;" aria-valuenow="65"
                        aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                    <div class="d-flex justify-content-around mb-1">
                     <h4 class="text-danger m-1" style="font-family:Georgia, 'Times New Roman', Times, serif;">Order Is not Confirmed...!</h4>
                    </div>
                  </div>
                </div>
				{{/ifCond}}
	 {{#ifCond details.status "canceled"}} 
                <div class="row d-flex align-items-center">
                  <div class="col-md-2">
                    <p class="text-muted mb-0 small">Track Order</p>
                  </div>
                  <div class="col-md-10">
                    <div class="progress" style="height: 6px; border-radius: 16px;">
                      <div class="progress-bar" role="progressbar"
                        style="width: 2%; border-radius: 16px; background-color: #a8729a;" aria-valuenow="65"
                        aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                    <div class="d-flex justify-content-around mb-1">
                     <h4 class="text-danger m-1" style="font-family:Georgia, 'Times New Roman', Times, serif;">Order Is Canceled...!</h4>
                    </div>
                  </div>
                </div>
				{{/ifCond}}

        
        
			
            <div class="d-flex justify-content-between pt-2">
              <p class="fw-bold mb-0">Order Details</p>
              <p class="text-muted mb-0"><span class="fw-bold me-4">Total</span> ₹{{details.price}}</p>
            </div>

            <div class="d-flex justify-content-between pt-2">
              <p class="text-muted mb-0">Invoice Number : {{details._id}}</p>
              <p class="text-muted mb-0"><span class="fw-bold me-4">Discount</span> ₹0.00</p>
            </div>

            <div class="d-flex justify-content-between">
              <p class="text-muted mb-0">Invoice Date : {{details.formatted}}</p>
              <p class="text-muted mb-0"><span class="fw-bold me-4">GST 18%</span> ₹ 0.00</p>
            </div>

            <div class="d-flex justify-content-between mb-5">
              <p class="text-muted mb-0">Recepits Voucher : *****</p>
              <p class="text-muted mb-0"><span class="fw-bold me-4">Delivery Charges</span> Free</p>
            </div>
          </div>
          <div class="card-footer border-0 px-4 py-5 bg-gradient"
            style="background-color: #1b161a; border-bottom-left-radius: 10px; border-bottom-right-radius: 10px;">
            <h5 class="d-flex align-items-center justify-content-end text-white text-uppercase mb-0">{{details.paymentmethod}}: <span class="h2 mb-0 ms-2">₹ {{details.price}}</span></h5>
          </div>
		  
        </div>
		
      </div>
	  
    </div>
	
  </div>
  
</section>
    
	
	
	
