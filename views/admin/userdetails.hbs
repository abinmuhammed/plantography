	<style>

  body{ background: linear-gradient(135deg, rgb(0, 0, 0) 0%, rgb(79, 71, 71)
  43%, rgb(170, 198, 178) 100%); background-attachment: fixed; font-family:
  'Arima Madurai', cursive; }

</style>

  
  <div class="  bg-gradient py-1 pl-3 text-white text-center " style="  font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif ;">
    <h3>Manage Users <i class="fa-solid fa-user"></i></h3>

  </div >


  <div class="container" >

	<table class="table  table-striped table-dark">
		<thead>
		  <tr>
			 <th class="d-none d-md-table-cell" scope="row"><span
                class="create_index"
              ></span></th>
			<th >first name</th>
			<th  class="d-none d-md-table-cell d-lg-table-cell">last name</th>
			 <th  class="d-none d-lg-table-cell">Email</th>
			 <th></th>
		  </tr>
		</thead>
		<tbody>
			{{#each users}}
		  <tr>
			<th class="d-none d-md-table-cell" scope="row"><span
                class="create_index"
              ></span></th>
			<td>{{this.Firstname}}</td>
			<td class="d-none d-lg-table-cell d-md-table-cell">{{this.Lastname}}</td>
			<td class="d-none d-lg-table-cell">{{this.Email}}</td>
			{{#if  this.isblocked}}
		    <td> <a href="/admin/userunblock/{{this._id}}" class="btn btn-primary "> Unblock</a>  </td>
		     {{else }}
			   <td> <a href="/admin/userblock/{{this._id}}" class="btn btn-warning "> Block</a>  </td>
			   {{/if}}
		  </tr>
	      {{/each}}
		</tbody>
	  </table>
	
  </div>


<script>
      var divs = document.querySelectorAll('.create_index'); for (var i = 0; i <
      divs.length; ++i) { divs[i].innerHTML = i + 1; }
    </script>