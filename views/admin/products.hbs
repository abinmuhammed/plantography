  <div class=" bg-gradient py-1  text-white text-center" style="background-color:RGB(39, 83, 29) ;  font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif ;">
   <div class="col-6 ">
    <h2>Products details <i class="fa-brands fa-pagelines"></i></h2>
   </div> 
  </div >
<div class="row   float-lg-right mr-lg-5">
    <a href="/admin/addproducts" style="box-shadow:2px ;" class="btn btn-primary py-lg-4 bg-gradient col-12" style="font-weight:600 ;" > Add Product <i class="fa-solid fa-plus"></i></a>

</div>




  <div class="container col-12  col-6" >

	<table class="table table-striped table-responsive table-dark" style="border-radius: 10px;">
		<thead>
		  <tr>
			<th class="d-none  d-lg-table-cell" scope="col">Number</th>
			<th scope="col">NAME</th>
			<th scope="col">CATAGORY</th>
			<th class="d-none d-md-table-cell  d-lg-table-cell" scope="col">PRICE</th>
			<th class="d-none  d-lg-table-cell" scope="col">IMAGE</th>
		     <th class="d-none  d-lg-table-cell" scope="col">OPTIONS</th>
		  
		  </tr>
		</thead>
		<tbody>
			{{#each data}}
		  <tr>
			<th class="d-none  d-lg-table-cell" scope="row"><span class="create_index"></span></th>
			<td>{{this.Name}}</td>
			<td>{{this.catogory}}</td>
			<td class="d-none d-md-table-cell d-lg-table-cell">₹{{this.price}}</td>
				<td class="d-none  d-lg-table-cell"><img src="/product_images/{{this.image1}}" style="width:70px;"  alt=""><img src="/product_images/{{this.image2}}" style="width:70px;"  alt=""></td>
		<td class=""><a class="btn btn-success" href="/admin/editproductdetails/{{this._id}}"><i class="fa-solid fa-pen"></i></a> 
		 <button class="btn btn-danger" onclick="not('{{this._id}}')" ><i class="fa-solid fa-trash-can"></i></button></td>
	         	
		  </tr>
	      {{/each}}
		</tbody>
	  </table>
	
  </div>

  
<nav aria-label="Page navigation example">
		<ul class="pagination">
			<li class="page-item">
				<a class="page-link text-white" href="#" aria-label="Previous">
					<span aria-hidden="true">&laquo;</span>
				</a>
			</li>
			{{#for 1 pages 1}}
			 <li class="page-item "><a class="page-link {{#ifCond this ../currentPage}} active {{/ifCond}}" href="/admin/productdetails?page={{this}}">{{this}}</a></li>
			{{/for}}

			<li class="page-item ">
				<a class="page-link text-white" href="#" aria-label="Next">
					<span aria-hidden="true">&raquo;</span>
				</a>
			</li>
		</ul>
	</nav>

<button onclick="topFunction()"  id="myBtn" title="Go to top"><i class="fa-solid fa-angles-up"></i></button>
<div class="bg-gradient text-center text-white"  style="background-color:RGB(60, 100, 51) ;">
<p class="mt-2 mb-2" style="opacity: 20%;">2020 © copyright @Plantography</p>
</div>

<script>
// Get the button
let mybutton = document.getElementById("myBtn");

// When the user scrolls down 20px from the top of the document, show the button
window.onscroll = function() {scrollFunction()};

function scrollFunction() {
  if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
    mybutton.style.display = "block";
  } else {
    mybutton.style.display = "none";
  }
}

// When the user clicks on the button, scroll to the top of the document
function topFunction() {
  document.body.scrollTop = 0;
  document.documentElement.scrollTop = 0;
}
</script>

<script>
	function deleteproductdetails(proid){
		$.ajax({
			  url:"/admin/deleteproductdetails",
			  data:{
				proid:proid,
			  },
			  method:"post",
			  success:(Response)=>{
				
				location.reload()
			  }
			  })
	}


function not(proid){

	swal({
  title: "Are you sure?",
  text: "Once deleted, you will not be able to recover this  file!",
  icon: "warning",
  buttons: true,
  dangerMode: true,
})
.then((willDelete) => {
  if (willDelete) {
	 deleteproductdetails(proid)
    swal("Poof! Your  file has been deleted!", {
      icon: "success",
    });
  } else {
    swal("Your  file is safe!");
  }
});
}



</script>

